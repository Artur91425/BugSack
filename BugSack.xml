<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/FrameXML/UI.xsd">
   <Frame name="BugSackFrame" inherits="DialogBoxFrame">
      <Backdrop name="$parentBackdrop" bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
         <BackgroundInsets>
            <AbsInset left="5" right="5" top="5" bottom="5"/>
         </BackgroundInsets>
         <TileSize>
            <AbsValue val="16"/>
         </TileSize>
         <EdgeSize>
            <AbsValue val="16"/>
         </EdgeSize>
      </Backdrop>
      <Size>
         <AbsDimension x="350" y="290"/>
      </Size>
      <Frames>
         <ScrollFrame name="BugSackFrameScroll" inherits="UIPanelScrollFrameTemplate" toplevel="true">
            <Anchors>
               <Anchor point="TOP">
                  <Offset>
                     <AbsDimension x="-10" y="-16"/>
                  </Offset>
               </Anchor>
            </Anchors>
            <Size>
               <AbsDimension x="305" y="220"/>
            </Size>
            <ScrollChild>
               <EditBox name="BugSackFrameScrollText" letters="1000" multiLine="true" autoFocus="true" enableMouse="true">
                  <Size>
                     <AbsDimension x="300" y="304"/>
                  </Size>
                  <FontString inherits="ChatFontNormal"/>
                  <Scripts>
                     <OnTextChanged>
                        BugSack.Obj:OnTextChanged()
                     </OnTextChanged>
                     <OnEscapePressed>
                        BugSackFrame:Hide()
                     </OnEscapePressed>
                  </Scripts>
               </EditBox>
            </ScrollChild>
         </ScrollFrame>
      </Frames>
   </Frame>
</Ui>